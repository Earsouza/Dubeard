<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.barber.Control.ServiceEdit"
    android:background="@color/cinza"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Serviço"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editDescriServiceEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:hint="Descrição"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/editValueServiceEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:hint="Valor"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btSaveServiceEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/azul"
        android:padding="15dp"
        android:text="Salvar"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btExcludeServiceEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:padding="15dp"
        android:text="Excluir"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btCancelServiceEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/chumbo"
        android:padding="15dp"
        android:text="Cancelar"
        android:textSize="20dp"
        />

</LinearLayout>

