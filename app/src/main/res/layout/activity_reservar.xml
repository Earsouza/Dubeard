<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.barber.Control.BarberCreate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Reservar Atendimento"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione um Serviço"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <Spinner
        android:id="@+id/spinnerHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Nome"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Selecione um Horário"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinnerServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:hint="Nome"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp" />


    <Button
        android:id="@+id/btReservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:padding="15dp"
        android:text="Cadastrar"
        android:textSize="20dp" />


    <Button
        android:id="@+id/btvoltar"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/black"
        android:padding="15dp"
        android:text="Voltar"
        android:textSize="20dp" />

</LinearLayout>