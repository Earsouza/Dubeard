<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ReservaHorarioActivity">

    <TextView
        android:id="@+id/tvHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o Horário:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHorario"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o Serviço:"
        android:textSize="18sp"
        android:layout_below="@id/spinnerHorario"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinnerServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvServico"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btReservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:layout_below="@id/spinnerServico"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
