<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".activity.Admin.Control.BarberEdit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Barbeiro"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
    />

    <EditText
        android:id="@+id/editNameBarberEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:background="@color/cinza_claro"
        android:hint="Nome"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
    />

    <EditText
        android:id="@+id/editPhoneBarberEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:background="@color/cinza_claro"
        android:hint="Telefone"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
    />

    <EditText
        android:id="@+id/editEmailBarberEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:background="@color/cinza_claro"
        android:hint="E-mail"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
    />

    <Button
            android:id="@+id/btSaveBarberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/azul"
            android:padding="15dp"
            android:text="Salvar"
            android:textColor="@color/white"
            android:textSize="20dp"
    />

    <Button
            android:id="@+id/btExcludeBarberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:padding="15dp"
            android:text="Excluir"
            android:textColor="@color/white"
            android:textSize="20dp"
    />

    <Button
            android:id="@+id/btCancelBarberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/chumbo"
            android:padding="15dp"
            android:text="Cancelar"
            android:textSize="20dp"
    />

</LinearLayout>
